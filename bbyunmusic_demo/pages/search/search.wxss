.searchContainer{
    padding: 0 20rpx;
}
/* 搜索框部分 */
.header{
    padding: 20rpx 0;
    display: flex;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
}
.searchInput{
    position: relative;
    flex: 1;
    background-color: rgba(237, 237, 237, .4);
    border-radius: 20rpx;
}
.searchInput input{
 margin-left: 50rpx;
 height: 60rpx;
}
.clean{
    position: absolute;
    right: 15rpx;
    top: 0;
    font-size: 30rpx;
    z-index: 100;
}
.icon-search:before{
   position: absolute;
   left: 15rpx;
}
.cancel{
    width: 100rpx;
    text-align: center;
}
.placeholder{
    color: #d43c33;
    font-size: 28rpx;
}


/* 热搜榜部分 */


.title{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    border-bottom: 1rpx solid #eee;
}
.hotList{
    display: flex;
    flex-wrap: wrap;
}
.hotItem{
    width: 50%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
}
.count{
    margin: 0 20rpx;
}
.iconImg{
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

/* 搜索框内容展示 */
.searchContent{
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #eee;
}
.searchItem{
    display: flex;
    height: 80rpx;
    line-height: 80rpx;

}

.content{
    margin-left: 30rpx;
    flex: 1;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}

/* 历史记录 */
.history{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height: 50rpx;

}
.history .title{
    height: 50rpx;
    font-size: 28rpx;
    line-height: 50rpx;
}
.history .historyItem{
    height: 50rpx;
    font-size: 26rpx;
    margin-left: 20rpx;
    padding: 0 30rpx;
    background-color: #ededed;
    border-radius: 20rpx;
    margin-bottom: 20rpx;

}
.delete{
    position: absolute;
    right: 15rpx;
    bottom: 10rpx;
}


page{
    height: 100%;
}
/* 头部区域 */
.recommendSongContainer .header{
    width: 100%;
    height: 300rpx;
    position: relative;
    
}
.header image{
    width: 100%;
    height: 100%;
}
.header .date{
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}
.header .date .day{
    font-size: 34rpx;
}

/* 内容区域 */
.listContainer{
    position: relative;
    top: -20rpx;
    border-radius: 30rpx;
    background-color: #fff;
    padding: 0 20rpx;
}
.listHeader{
    /* 一般来说宽度默认100% */
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;

}
.listHeader text{
    font-size: 28rpx;
}
.moreSelect{
    float: right;
}

.listSong{
    height: calc(100vh - 380rpx);
}
.sItem{
    /* height: 80rpx; */
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.sItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;

}
.musicInfo{
    margin-left: 20rpx;
    height: 80rpx;
    display: flex;
    flex-direction: column;
}
.musicInfo text{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.sItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}